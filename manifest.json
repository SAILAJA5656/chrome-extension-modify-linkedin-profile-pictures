{
  "manifest_version": 2,
  "name": "LinkedIn Profile Picture Changer",
  "version": "1.0",
  "description": "Changes profile pictures in LinkedIn posts to a specified image",
  "permissions": ["https://www.linkedin.com/*"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
